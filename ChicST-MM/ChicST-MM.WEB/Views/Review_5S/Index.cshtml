@model List<ChicST_MM.WEB.Models.Review_5SViewModel>
@{
    ViewBag.Title = "5s评审标准";
}
<style type="text/css">
    #tab tbody tr td:nth-child(2n-1) {
        text-align: center;
        width: auto !important;
    }
    
</style>


@*5s评审标准*@
<h3>5S评审标准</h3>
<table class="table table-striped table-bordered table-hover" id="tab">
    <tr>
        <th>序号</th>
        <th>评估项目</th>
        <th>具体内容</th>
        <th>评估标准</th>
        <th>分值</th>
        <th>扣分标准</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.评估项目</td>
            <td>@item.具体内容</td>
            <td>@item.评估标准</td>
            <td>@item.分值</td>
            <td>@item.扣分标准</td>
        </tr>
    }
</table>




