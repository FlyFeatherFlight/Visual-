    });
    //行编辑
    function Edit(id) {
        var model = $("#grid").jqGrid('getRowData', id);
        console.log(model)

        // 给修改模态框的赋值
        $("#placeE").val(model.起讫地点);//起讫地点
        $("#CdateE").val(model.日期);//出差日期
        $("#cityE").val(model.城市);//城市
