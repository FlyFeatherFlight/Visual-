                { label: '修改', name: 'Edit', index: 'id', width: 100, sortable: false, align: "center" },
                { label: '删除', name: 'Delete', index: 'id', width: 100, sortable: false, align: "center" },
                { label: '报销ID', name: '报销ID', index: '报销ID', width: 1, sorttype: "int", align: "center" },

            ],
            caption: "出差报销展示",
