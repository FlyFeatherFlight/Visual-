                { label: '车船费', name: '车船费', index: '车船费', width: 60, sorttype: "int", align: "center"  },
                { label: '市内交通费', name: '交通费', index: '交通费', width: 90, align: "center" },
                { label: '生活补助费', name: '生活补助', index: '生活补助费', width: 100, sortable: false, align: "center" },
