@model List<ChicST_MM.WEB.Models.Review_5SViewModel>
@{
    ViewBag.Title = "5s评审标准";
}
<style type="text/css">
    #tab tbody tr td:nth-child(2n-1) {
        text-align: center;
        width: auto !important;
    }
</style>
<h3>5S评审标准</h3>
<table class="table table-striped table-bordered table-hover" id="tab">
    <tr>
        <th>序号</th>
        <th>评估项目</th>
        <th>具体内容</th>
        <th>评估标准</th>
        <th>分值</th>
        <th>扣分标准</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.评估项目</td>
            <td>@item.具体内容</td>
            <td>@item.评估标准</td>
            <td>@item.分值</td>
            <td>@item.扣分标准</td>
        </tr>
    }
</table>
<script type="text/javascript">
    window.onload = function () {
        // 显示当前登录者
        var a = sessionStorage.getItem("userkey");
        $('.userName').text(a);
        //合并单元格
        var tab = document.getElementById("tab");
        var maxCol = 4, val, count, start;

        for (var col = maxCol - 1; col >= 0; col--) {
            count = 1;
            val = "";
            for (var i = 0; i < tab.rows.length; i++) {
                if (val == tab.rows[i].cells[col].innerHTML) {
                    count++;
                } else {
                    if (count > 1) { //合并
                        start = i - count;
                        tab.rows[start].cells[col].rowSpan = count;
                        for (var j = start + 1; j < i; j++) {
                            tab.rows[j].cells[col].style.display = "none";
                        }
                        count = 1;
                    }
                    val = tab.rows[i].cells[col].innerHTML;
                }
            }
            if (count > 1) { //合并，最后几行相同的情况下
                start = i - count;
                tab.rows[start].cells[col].rowSpan = count;
                for (var j = start + 1; j < i; j++) {
                    tab.rows[j].cells[col].style.display = "none";
                }
            }
        }
    };

</script>



