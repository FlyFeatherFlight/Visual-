<script>
    
    //获取门店数据
     $.ajax({
        type: "get",
        data: {},
        url: '@Url.Action("Getstores", "StoreAnalyze")',
        dataType: "json",
        cache: false,
        async: true,
         success: function (data) {
             //console.log(data);
            $.each(data, (i, m) => {

                $("#store").append("<option value=" + m.ID + ">" + m.Name + "</option>")

            })
        },
        error: function(err){
            console.log(err)
        }

    })
    //根据选择的门店显示数据
    var storeid = '';
    $("#store").on("change", function () {
        $("#storeMan").addClass("hidden");
        $(".personNum").removeClass("hidden");
        storeid = $("#store").val()
        $("#storeMan").empty();
        RecvingTable(storeid, 0);
        
    })
    //接待相关
    function RecvingTable(storeid,Manid) {
         $.ajax({
            type: "post",
             data: { storeid: storeid, emid: Manid},
            url: '@Url.Action("GetRecving", "StoreAnalyze")',
            dataType: "json",
            cache: false,
            async: true,
            success: function (data) {
                console.log(data);
                $(".RecNum").text(data.recCount);
                $(".TrackNum").text(data.trackCount);
                $(".ExcNum").text(data.excCount);
                 $("table tbody").empty();
                if (data.data.length == 0) {
                     //console.log(1)
                     $("table tbody").append('<tr><td colspan="18">该门店暂无数据</td></tr>')
                 } else {
                     $.each(data.data, (i, m) => {
                         //console.log(m)
                         //console.log(i)
                         $("table tbody").append('<tr><td>' + m.店铺 + '</td><td class="Xlstime">' + m.接待日期 +
                             '</td><td>' + m.客户姓名 + '</td><td>' + m.性别 + '</td><td>' + m.年龄段 +
                             '</td><td>' + m.客户类型 + '</td><td>' + m.客户类别 + '</td><td>' + m.客户来源 +
                             '</td><td>' + m.客户目的 + '</td><td>' + m.来店次数 + '</td><td>' + m.客户电话 +
                             '</td><td class="Exc'+i+'">' + m.是否有意向 + '</td><td class="Xlstime">' + m.进店时间 + '</td><td class="Xlstime">' + m.出店时间 +
                             '</td><td class="conmeTime'+i+'">' + m.进店时长 + '</td><td>' + m.特征 + '</td><td>' + m.接待人 + '</td><td>'
                             + m.跟进人 + '</td></tr>');
                         var time = ".conmeTime" + i;
                         var Exc = ".Exc" + i;
                         if (m.进店时长 < 0) {
                             $(time).css("color", "red");
                         }
                         if (m.是否有意向 == "true") {
                             $(Exc).text("有意向");
                         } else if (m.是否有意向 == "false") {
                             $(Exc).text("无意向");
                         } else {
                             $(Exc).text("未确认");
                         }
                     })
                     ///Date(1354116249000)/ 转成时间格式
                     $(".Xlstime").each((i, m) => {
                         var strTime = $(m).text();
                         //console.log(strTime)

                         strTime = new Date(parseInt(strTime.substr(6, 19))).toLocaleString();
                         $(m).text(strTime);
                     })

                 }

            },
            error: function(err){
                console.log(err)
            }

        })
    }
    //加载员工数据
    function storeSeach() {
        $("#storeMan").removeClass("hidden");
        $.ajax({
            
            type: "post",
            data: { storeid: storeid },
            url: '@Url.Action("GetStoreEmployees", "StoreAnalyze")',
            dataType: "json",
            cache: false,
            async: true,
                success: function (data) {
                    console.log(data);
                    
                $.each(data, (i, m) => {

                    $("#storeMan").append("<option value=" + m.ID + ">" + m.姓名 + "</option>")

                })
            },
            error: function(err){
                console.log(err)
            }

            })
    }
    // 加载员工数据
    var storeMan = "";
    $("#storeMan").on("change", function () {
        storeMan = $("#storeMan").val();

        RecvingTable(storeid, storeMan);

    })
    // 跳转到跟进
    $(".TrackInfo").click(function () {
        console.log(storeid)
        window.location.href = "@Url.Action("CustomerTrackView", "StoreAnalyze")?storeID=" + storeid + "&emID=" + storeMan+
    })
</script>