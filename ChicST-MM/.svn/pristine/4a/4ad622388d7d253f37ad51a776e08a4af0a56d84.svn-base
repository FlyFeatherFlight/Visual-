        /// <summary>
        /// 其他报销详情页
        /// </summary>
        /// <param name="id">其他报销主表ID</param>
        /// <returns></returns>
        public ActionResult OtherReimbursement_Details(int id) {
            if (id<=0)
            {
                return Content("");
            }
            var model = otherReimburseBLL.GetModel(p => p.ID == id);
            if (model==null)
            {
                return Content("");
            }
            return View(BuildOtherReimburse(model));
        }

        /// <summary>
