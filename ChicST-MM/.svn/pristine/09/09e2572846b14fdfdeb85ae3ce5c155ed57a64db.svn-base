<script>
    //根据是否滚动显示表头
    scroollHeadTab();
    //处理时间格式
    dateTab($(".date"));

    //修改金额 传给后台
    function Money(_this) {
        var money = $(_this).val() * 10000;
        $(_this).prev().val(money);
    }
    //转换租金金额
    $(".tabMoney .money").each(function (i, m) {
        $(m).text($(m).text() / 10000);
    })
    
   
    //获取省份数据
    $.ajax({
        type: "post",
        data: {},
        url: '@Url.Action("GetProvince", "DevelopmentDoc")',
        dataType: "json",
        cache: false,
        async: true,
        success: function (data) {
            $.each(data, function(i, m) {
                $("#sheng").append("<option value=" + m + ">" + m + "</option>");
                $("#shengE").append("<option value=" + m + ">" + m + "</option>");

            })

        },
        error: function (err) {
            alert("点击过快或网络错误，请稍后重试！");;
            console.log(err);
        }

    })

    //根据选择的省份，获取市数据
    /****查询***/
    $("#sheng").change(function () {
        $("#shi").empty();
        getShi($("#sheng").val(), $("#shi"));
    })

    /****修改***/
    $("#shengE").change(function () {
        $("#lastCity input").val("");
        $("#lastCity span").text("");
        $("#lastMarket span").text("");
        $("#lastMarket input").val("");
      
        $("#shiE").empty();
        getShi($("#shengE").val(), $("#shiE"));
    })


    //修改
    $("#shiE").change(function () {

        $("#lastCity input").val($("#shiE").val());


        $("#marketE").empty();
       
        getMarket($("#marketE"), $("#shiE").val());
       
    })
    $("#marketE").change(function () {
        $("#lastMarket input").val($("#marketE").val());

    })
   

    function EditCompetes(_this) {

        var dealer = $.trim($(_this).parent().siblings(".dealer").text()),//经销商
            city = $.trim($(_this).parent().siblings(".city").text()),//城市
            site = $.trim($(_this).parent().siblings(".site").text()),//位置
            area = $.trim($(_this).parent().siblings(".area").text()),//面积
            market = $.trim($(_this).parent().siblings(".market").text()),//商场
            date = $.trim($(_this).parent().siblings(".date").text()),//入驻日期
            floor = $.trim($(_this).parent().siblings(".floor").text()),//楼层
            status = $.trim($(_this).parent().siblings(".status").text()),//经营状态
            storeNum = $.trim($(_this).parent().siblings(".storeNum").text()),//店面客流
            image = $.trim($(_this).parent().siblings(".image").text()),//形象
            discount = $.trim($(_this).parent().siblings(".discount").text()),//折扣
            notes = $.trim($(_this).parent().siblings(".notes").text()),//备注
            Id = $.trim($(_this).parent().siblings(".Id").text()),
            cityId = $.trim($(_this).parent().siblings(".cityId").text()),
            marketId = $.trim($(_this).parent().siblings(".marketId").text());//商场id
            
        //给修改模态框赋值
        $("#lastCity span").text(city);
        $("#lastCity input").val(cityId);
        $("#lastMarket span").text(market);
        $("#lastMarket input").val(marketId);
        $("#dealerE").val(dealer);
       
        $("#siteE").val(site);
        $("#areaE").val(area);
        $("#dateE").val(date);
        $("#storeNumE").val(storeNum);
        $("#imageE").val(image);
        $("#discountE").val(discount);
        $("#notesE").val(notes);

        $("#EditId").val(Id);
        common($("#floor option"), floor);
        common($("#status option"), status)
        $("#edit-diolog").dialog("option", "title", "修改竞品").dialog("open");
    }
     //修改竞品
    $("#edit-diolog").dialog({
        autoOpen: false,
        height: 700,
        width: 960,
        modal: true,
        buttons: {

            "取消": function () { $(this).dialog("close") },
            "提交": function () {

                var reds = $("#edit-diolog .red"),
                status = false;
                $(reds).each(function(i, m) {
                    console.log(m.value);
                    if (m.value == "" || m.value == null) {
                        return status = true;
                    }
                })
                if (status) {
                    alert("必填项不能为空！");
                } else {
                    $.ajax({
                    url: "@Url.Action("CompetesEdit", "DevelopmentDoc")",
                    data: $("#edit-diolog").serialize(),
                    type: "post",
                    dataType: "json",
                    success: function (data) {
                        if (data.success) {
                            alert(data.msg);
                            window.location.reload();
                        } else {
                            alert(data.msg);

                        }
                    },
                    error: function (err) {
                        alert("点击过快或网络错误，请稍后重试！")
                        console.log(err);
                    }
                })
                $("#edit-diolog").dialog("close")
                }
            }
        }
    })
     //添加租金年
    function Add(_this) {
        Id = $.trim($(_this).parent().siblings(".Id").text());
        $("#AddID").val(Id);
        $("#add-diologY").dialog("option", "title", "添加竞品月销售额").dialog("open");

    }
    //添加商场租金年
    $("#add-diologY").dialog({
        autoOpen: false,
        height: 350,
        width: 500,
        modal: true,
        buttons: {

            "取消": function () { $(this).dialog("close") },
            "提交": function () {

                 var objDate = {
                     "竞品档案ID": $("#AddID").val(),
                     "销售年": $("#yearA").val(),
                     "销售月": $("#monthA").val(),
                     "销售额": $("#moneyA").val(),
                 },
                  datas = [];
            datas.push(objDate);

        $.ajax({
            type: "post",
            data: { lis: JSON.stringify(datas) },
            url: '@Url.Action("CometesAnnualSalesAdd", "DevelopmentDoc")',
            dataType: "json",
            cache: false,
            async: true,
            success: function (data) {
                if (data.success) {
                    alert(data.msg);
                    $("#add-diologY").dialog("close");
                    window.location.reload();
                } else {
                    alert(data.msg);
                }
                //console.log(data);
            },
            error: function (err) {
                alert("点击过快或网络错误，请稍后重试！");;
                console.log(err);
            }

        })

            }
        }
    })


    //修改年销售
    function Edit(_this) {

        var money = $.trim($(_this).parent().siblings(".money").text()),
            year = $.trim($(_this).parent().siblings(".year").text()),
            month = $.trim($(_this).parent().siblings(".month").text()),
            Id = $.trim($(_this).parent().siblings(".Id").text());
        comId = $.trim($(_this).parent().siblings(".comId").text());

        //给修改模态框赋值
        $("#year").val(year);
        common($("#month option"), month);
        $("#money").val(money);
        $("#moneyE").val(money*10000);
        $("#Id").val(Id);
        $("#EditID").val(comId);
        $("#edit-diologY").dialog("option", "title", "修改竞品月销售额").dialog("open");
    }
     //修改竞品年销售
    $("#edit-diologY").dialog({
        autoOpen: false,
        height: 350,
        width: 500,
        modal: true,
        buttons: {

            "取消": function () { $(this).dialog("close") },
            "提交": function () {
                $.ajax({
                    url: "@Url.Action("CometesAnnualSalesEdit", "DevelopmentDoc")",
                    data: $("#edit-diologY").serialize(),
                    type: "post",
                    dataType: "json",
                    success: function (data) {
                        if (data.success) {
                            alert(data.msg);
                            window.location.reload();
                        } else {
                            alert(data.msg);

                        }
                    },
                    error: function (err) {
                        alert("点击过快或网络错误，请稍后重试！")
                        console.log(err);
                    }
                })

                $("#edit-diologY").dialog("close")
            }
        }
    })

     //竞品删除
    function DelCompetes(_this) {
         var id = $.trim($(_this).parent().siblings(".Id").text()),
             del = $(_this).parent().parent();
         $.ajax({
                type: "post",
                data: { id: id },
                url: '@Url.Action("CompetesDel", "DevelopmentDoc")',
                dataType: "json",
                cache: false,
                async: true,
             success: function (data) {
                 console.log(data);
                 if (data.success) {
                     alert(data.msg);
                   $(del).remove();
                 } else {
                     alert(data.msg);
                 }

                },
                error: function (err) {
                    alert("点击过快或网络错误，请稍后重试！");;
                    console.log(err);
                }

            })


    }
     //年销售额删除
     function Del(_this) {
         var id = $.trim($(_this).parent().siblings(".Id").text()),
             del = $(_this).parent().parent();
         $.ajax({
                type: "post",
             data: { id: id },
                url: '@Url.Action("CometesAnnualSalesDel", "DevelopmentDoc")',
                dataType: "json",
                cache: false,
                async: true,
             success: function (data) {
                 console.log(data);
                 if (data.success) {
                     alert(data.msg);
                   $(del).remove();
                 } else {
                     alert(data.msg);
                 }

                },
                error: function (err) {
                    alert("点击过快或网络错误，请稍后重试！");;
                    console.log(err);
                }

            })


    }
    //获取市
    function getShi(province, shi ) {
         $.ajax({
                type: "post",
                data: { province: province },
                url: '@Url.Action("GetRgion", "DevelopmentDoc")',
